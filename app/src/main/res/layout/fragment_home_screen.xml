<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#151521"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.HomeScreen"
    tools:ignore="ExtraText">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtHome"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="Home"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/afacad_bold"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/songCard"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"

            >
            <ImageView
                android:id="@+id/imageSong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_signin"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:id="@+id/musicContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:background="@drawable/background_shadow"
                >

                <TextView
                    android:id="@+id/numberTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:text="#1"
                    android:fontFamily="@font/afacad_bold"
                    />
                <TextView
                    android:id="@+id/songTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/numberTitle"
                    android:text="Rock Star"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/afacad_bold"
                    />
                <TextView
                    android:id="@+id/artistTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/songTitle"
                    android:text="(feat.Roddy rich)"
                    android:fontFamily="@font/afacad_bold"
                    android:ellipsize="end"
                    android:layout_marginRight="20dp"
                    android:maxLines="1"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/artistTitle"
                    android:layout_marginTop="18dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/playBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:background="@drawable/gradient_background"
                        >
                        <ImageView
                            android:id="@+id/iconPlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:src="@drawable/ic_baseline_play_arrow_24"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iconPlay"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="Listen now"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/afacad_bold"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/txtTrend"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_alignParentStart="true"
                android:text="Trending"
                android:layout_centerVertical="true"
                android:fontFamily="@font/afacad_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="See All"
                android:textColor="#8E8E8E"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:fontFamily="@font/afacad_bold"
                />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trendingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/txtTopFavour"
                android:layout_height="wrap_content"
                android:text="Top Favorite"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/afacad_bold"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="See All"
                android:textColor="#8E8E8E"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:fontFamily="@font/afacad_bold"
                />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topFavorList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>